@model Steak

<div class="col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        @if (Model.InStock)
        {
            if (Model.Discount > 0)
            {
                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@Model.Discount % OFF</div>
            }
        }
        else
        {
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">SOLD</div>
        }

        <!-- Product image-->
        <img class="card-img-top" src="~/images/@Model.ImageURL" alt="..." />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Name</h5>
                <!-- Product reviews-->
                <div class="d-flex justify-content-center small text-warning mb-2">
                    @for (int i = 1; i <= Model.Star; i++)
                    {
                        <div class="bi-star-fill"></div>
                    }
                </div>
                <!-- Product price-->
                @if (Model.InStock)
                {
                    if (Model.DiscountedPrice > 0)
                    {
                        <span class="text-muted text-decoration-line-through">@Model.Price.ToString("c")</span>
                        <span>@Model.DiscountedPrice.ToString("c")</span>
                    }
                    else
                    {
                        <span>@Model.Price.ToString("c")</span>
                    }
                }
                else
                {
                    <span class="text-muted text-decoration-line-through">@Model.Price.ToString("c")</span>
                }
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
        </div>
    </div>
</div>